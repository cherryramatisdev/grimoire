#!/usr/bin/env perl

use v5.14;

use strict;
use warnings;

my $cmd = join("", @ARGV);
my @actions = `php artisan list --format=json | jq -r '.namespaces.[].commands[]'`;

say "TESTE $cmd";

if ($ENV{COMP_LINE}) {
    @actions = grep /^$cmd/, @actions;

    map { /^$cmd/ && say $_} @actions;
    exit 0;
}

exec("php artisan @ARGV");
